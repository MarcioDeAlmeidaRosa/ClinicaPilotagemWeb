@model ClinicaPilotagemWeb.Models.User
@using ClinicaPilotagemWeb.Resources
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="row">
    <div class="col-md-6 col-lg-6 col-sm-6">
        <fieldset>
            @using (Html.BeginForm("Login", "Autentication", FormMethod.Post))
            {
                <div class="row">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required", @placeholder = Language.EnterYourEmail, @alt = Language.EnterYourEmail, @title = Language.EnterYourEmail })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-errer" })
                </div>

                <div class="row">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required", @placeholder = Language.EnterYourPassword, @alt = Language.EnterYourPassword, @title = Language.EnterYourPassword })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-errer" })
                </div>
                <br />
                <div class="row">
                    <input type="submit" value="@Language.SignIn" class="bottom" />
                </div>
            }
        </fieldset>
    </div>
    <div class="col-md-6 col-lg-6 col-sm-6"">
        <fieldset>

        </fieldset>
    </div>
</div>